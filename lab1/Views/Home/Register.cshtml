@model lab1.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<div id="login-overlay" class="modal-dialog">
    <div class="modal-header">
        <h2 class="modal-title text-center" id="myModalLabel">Register</h2>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-lg-offset-3 col-sm-offset-3">
                @using (@Html.BeginForm("ConfirmRegister", "Home"))
                {
                    <div class="form-group">
                        @Html.LabelFor(x => x.UserName)
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "example", title = "Please entr your username" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new {@class = "form-control", title = "Please enter your password"})
                        <span class="help-block"></span>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.RetryPassword)
                        @Html.PasswordFor(x => x.RetryPassword, new { @class = "form-control", title = "Please retry your password" })
                        <span class="help-block"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-sm btn-primary btn-block">Register</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

