@model lab1.Models.LoginModel
@{
    ViewBag.Title = "Index";
}
<div id="login-overlay" class="modal-dialog">
    <div class="modal-header">
        <h2 class="modal-title text-center" id="myModalLabel">Login</h2>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-lg-offset-3 col-sm-offset-3">
                @using (@Html.BeginForm("Login", "Home"))
                {
                    <div class="form-group">
                        @Html.LabelFor(x => x.UserName)
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "example", title = "Please entr your username" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new {@class = "form-control", title = "Please enter your password"})
                        <span class="help-block"></span>
                    </div>
                    if (ViewData["DivIsVisible"] as string == "visible")
                    {
                        @Html.Raw(@"<div class=""alert alert-danger"">Wrong username or password</div>")
                    }

                    <div class="checkbox">
                        @Html.CheckBoxFor(x => x.RemeberMe)
                        @Html.LabelFor(x => x.RemeberMe)
                        <p class="help-block">(if this is a private computer)</p>
                    </div>
                    <div class="form-group">
                        <label>@ViewData["CapchaText"]</label>
                        @Html.LabelFor(x => x.Capcha)
                        @Html.TextBoxFor(x => x.Capcha, new{@class = "form-control", title = "Please enter capcha"})
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-sm btn-primary btn-block">Login</button>
                        @Html.ActionLink("Register", "Register", "Home", htmlAttributes: new {@class = "btn btn-success btn-block"})
                    </div>
                }
            </div>
        </div>  
    </div>
</div>

